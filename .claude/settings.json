{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | xargs -I {} npx prettier --write --ignore-unknown \"{}\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {},
  "plansDirectory": ".claude/plans"
}
